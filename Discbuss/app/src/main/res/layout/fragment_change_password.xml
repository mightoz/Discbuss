<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="teamosqar.discbuss.fragments.ChangePasswordFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Old password"
            android:id="@+id/textViewOldPassword"
            android:layout_weight="1"
            android:layout_alignBottom="@+id/editTextOldPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextOldPassword"
            android:layout_weight="1"
            android:layout_marginTop="66dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="New password"
            android:id="@+id/textViewNewPassword"
            android:layout_below="@+id/editTextOldPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="53dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextNewPassword"
            android:layout_alignBottom="@+id/textViewNewPassword"
            android:layout_alignLeft="@+id/editTextOldPassword"
            android:layout_alignStart="@+id/editTextOldPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Confirm password"
            android:id="@+id/textViewConfirmPassword"
            android:layout_below="@+id/editTextNewPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="61dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextConfirmPassword"
            android:layout_alignBottom="@+id/textViewConfirmPassword"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit password"
            android:id="@+id/submitNewPWButton"
            android:onClick="setNewPassword"
            android:layout_marginTop="91dp"
            android:layout_below="@+id/textViewConfirmPassword"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>
