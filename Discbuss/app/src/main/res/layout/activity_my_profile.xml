<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:launchMode="singleInstance"
    tools:context="teamosqar.discbuss.activities.MyProfileActivity">


    <FrameLayout
        android:id="@+id/changePasswordPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Namn: "
        android:id="@+id/textViewNameTag"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textViewEmailTag"
        android:layout_alignRight="@+id/textViewEmailTag" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email: "
        android:id="@+id/textViewEmailTag"
        android:layout_below="@+id/textViewNameTag"
        android:layout_alignEnd="@+id/textViewKarmaTag"
        android:layout_alignRight="@+id/textViewKarmaTag"
        android:layout_marginTop="35dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Karma: "
        android:id="@+id/textViewKarmaTag"
        android:layout_below="@+id/textViewEmailTag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewDisplayName"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewUserEmail"
        android:layout_alignTop="@+id/textViewEmailTag"
        android:layout_alignLeft="@+id/textViewDisplayName"
        android:layout_alignStart="@+id/textViewDisplayName" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewUserKarma"
        android:layout_alignTop="@+id/textViewKarmaTag"
        android:layout_alignLeft="@+id/textViewDisplayName"
        android:layout_alignStart="@+id/textViewDisplayName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change password"
        android:id="@+id/changePwButton"
        android:onClick="changePassword"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/topStatementButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View top statements"
        android:onClick="presentTopStatements"
        android:id="@+id/topStatementButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change display name"
        android:onClick="changeUserName"
        android:id="@+id/displaynameButton"
        android:layout_above="@+id/changePwButton"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/fragmentPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
