<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimaryDark">@color/standard_darker</item>

        <!-- Sets color of loading fragments and textcursor, and probably more stuff. -->
        <item name="android:colorControlActivated"
            tools:targetApi="lollipop">
            @color/standard_gray</item>


        <!-- Makes buttons flash a color when clicked. -->
        <!--
        <item name="android:colorControlHighlight"
            tools:targetApi="lollipop">
            @color/standard_green</item>
        -->
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/standard_dark</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/standard_green</item>
    </style>

</resources>
